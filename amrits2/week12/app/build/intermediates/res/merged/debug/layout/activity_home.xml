<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.habittracker.HomeActivity">


    <Button
        android:id="@+id/habits_home"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:text="Habits"
        app:layout_constraintLeft_toRightOf="@+id/calendar_home"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/calendar_home"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:text="Calendar"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Welcome to Habit Tracker!"
            app:layout_constraintTop_toBottomOf="@+id/calendar_home" />

        <TextView
            android:id="@+id/sharedtasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Shared Tasks"
            app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <ListView
        android:id="@+id/shared_habit_view"
        android:layout_width="368dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/sharedtasks"
        ></ListView>


</android.support.constraint.ConstraintLayout>

