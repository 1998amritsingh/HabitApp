<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.habittracker.CalendarActivity">


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/habits_calendar"
         />


    <ListView
        android:id="@+id/habitview_calendar"
        android:layout_width="368dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        ></ListView>

    <Button
        android:id="@+id/home_calendar"
        android:layout_width="137dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Home"
        />

    <Button
        android:id="@+id/habits_calendar"
        android:layout_width="138dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toRightOf="@+id/home_calendar"
        android:text="Habits"
        />



</android.support.constraint.ConstraintLayout>
